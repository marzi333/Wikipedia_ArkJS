<div class="container">
    <div class="header">
        <text class="title">{{ title }}</text>
        <text class="description">{{ description }}</text>

        <div class="button" onclick="onClick">
            <image class="btn-image" src="../../common/list.png"></image>
            <text class="btn-text">Contents</text>
        </div>
        <menu id="apiMenu" onselected="onMenuSelected">
            <option value="Item 1">Background</option>
            <option value="Item 2">Section 1</option>
            <option value="Item 3">Section 2</option>
        </menu>

    </div>
    <div class="content">
        <text>{{ content }}</text>
    </div>
    <div class="footer">
        <button class="text text1" type="text" onclick="closePage">Close</button>
        <button class="text text3" type="text">SELECT</button>
        <button class="text text2" type="text">Options</button>
    </div>
</div>